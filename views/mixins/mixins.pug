mixin createPostForm(userLoggedIn)
    .postFormContainer     
        .userImageContainer 
            img(src=userLoggedIn.MugShotPic)
        .textareaContainer 
            textarea#postTextarea(placeholder="Free Speech?")
            .buttonsContainer
                button#submitPostButton(disabled="") Post
                
